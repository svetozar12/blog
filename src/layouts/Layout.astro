---
import "../styles/index.css";
import "../styles/utility.css";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/SG.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta charset="UTF-8" />
    <meta name="description" content="Svetozar Gospodinov Personal Blog" />
    <meta
      name="keywords"
      content="Svetozar, Blog, Gospodinov,Web Developing,React,Graphql,sgospodinov,gospodinovs"
    />
    <meta name="author" content="Svetozar Gospodinov" />
    <title>{title}</title>
  </head>
  <body>
    <article>
      <slot />
    </article>
  </body>
</html>

<style>
  article {
    margin-right: auto;
    margin-left: auto;
    max-width: 90ch;
    padding-left: 2rem;
    padding-right: 2rem;
    width: 100%;
  }
</style>
