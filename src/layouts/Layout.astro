---
import "../styles/index.css";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/SG.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div>
      <slot />
    </div>
  </body>
</html>

<style>
  div {
    margin-right: auto;
    margin-left: auto;
    max-width: 90ch;
    padding-left: 2rem;
    padding-right: 2rem;
    width: 100%;
  }
</style>
