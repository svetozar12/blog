---
import Tags from "./Tags.astro";

interface Props {
  title: string;
  summary: string;
  tags: string[];
  date: string;
  url: string;
}

const { date, summary, tags, title, url } = Astro.props;
---

<article class="container">
  <div>
    <a href={url}>
      <h1 class="text">{title}</h1>
    </a>
    <p>{date}</p>
    <Tags tags={tags} />
  </div>
  <p>{summary}</p>
  <a style="color: var(--blog-blue)" href={url}>Read more</a>
</article>

<style>
  .text {
    font-size: var(--header-font-size);
    font-weight: var(--header-font-weight);
  }
  .container > * {
    color: var(--blog-white);
  }
  a {
    color: var(--blog-white) !important;
  }
  p {
    color: var(--blog-gray);
  }
</style>
