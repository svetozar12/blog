---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="tagsContainer">
  {tags.map((tag) => <span class="tag">{tag}</span>)}
</div>

<style>
  .tagsContainer {
    display: flex;
  }
  .tag {
    padding: 0.25em 0.5em;
    border: 1px solid var(--blog-white);
    color: var(--blog-white);
    border-radius: var(--blog-border-radius);
    margin-right: 1em;
  }
</style>
